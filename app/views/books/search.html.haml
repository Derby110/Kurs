          = text_field_tag 'search[part]', params['search']['part'], placeholder: "Укажите том.часть книги", class: 'form-control'
      .col-md-5
        .form-group
          = label_tag 'search', t('activerecord.attributes.book.publick_year')
          = text_field_tag 'search[publick_year]', params['search']['publick_year'], placeholder: "Введите год публикации", class: 'form-control'
    .row
      .col-md-5
        .form-group
          = label_tag 'search', t('activerecord.attributes.book.schelf_number')
          = text_field_tag 'search[publick_year]', params['search']['publick_year'], placeholder: "Укажите номер полки", class: 'form-control'
    .row
      .col-md-5
        .form-group
          = label_tag 'search', t('activerecord.attributes.book.number_of_have')
          = text_field_tag 'search[number_of_have]', params['search']['number_of_have'], placeholder: "Укажите сколько экземпляров в наличии", class: 'form-control'
