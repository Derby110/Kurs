= form_for @room do |f|
  - if @room.errors.any?
    #error_explanation
      %h2= "#{pluralize(@room.errors.count, "error")} prohibited this room from being saved:"
      %ul
        - @room.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :schort_name
    = f.text_field :schort_name
  .field
    = f.label :long_name
    = f.text_area :long_name
  .actions
    = f.submit 'Сохранить'
